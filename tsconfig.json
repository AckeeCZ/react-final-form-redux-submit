{
    "compilerOptions": {
        "declaration": true,
        "importHelpers": true,
        "module": "es2020",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "target": "es2017",
        "outDir": "lib/esm",
        "rootDir": "src",
        "moduleResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/__tests__/**", "src/**/*.test.ts"]
}
